<Window x:Class="AttendenceManagementSystem.Views.AccountSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendenceManagementSystem.Views"
        mc:Ignorable="d"
         d:DesignHeight="600" d:DesignWidth="500"
        Title="AccountSettings" 
        
          WindowStyle="None"
         AllowsTransparency="True"
        Background = "Transparent" 
        WindowStartupLocation = "CenterScreen"
         MinHeight="600" MinWidth="500" Height="550" Width="500"
        MouseDown="Window_MouseDown"  
        MouseDoubleClick="Window_MouseDoubleClick"
        Icon="\Images\images.ico"  >


    <Border Background="white" CornerRadius="20"  BorderBrush="#431c52" BorderThickness="4" >
        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height = "50"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="6" >
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width = "35" />

                    <!--<ColumnDefinition Width = "27" />-->
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                     Text = "ACCOUNT SETTING"
                     Foreground = "Black"
                     FontSize = "22"
                     FontWeight="Bold"
                     FontFamily = "Montserrat" HorizontalAlignment="Center"
                     VerticalAlignment = "Center"
                     Margin = "35,0,0,0"
                     Padding="3,6,7,6">

                </TextBlock>


                <Button x:Name = "btnClose" 
                  Content = "X"
                  VerticalContentAlignment="Center"
                  Style="{StaticResource Closebtn}"
                  Grid.Column = "1" Grid.Row="0"
                  Click = "btnClose_Click" 
                  HorizontalAlignment="Left" Height="27" 
                  VerticalAlignment="Top" Margin="3,3,0,0"  />

            </Grid>

            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                <Grid.RowDefinitions >
                    <RowDefinition Height = "0.5*"/>
                    <RowDefinition Height="0.3*"  />
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.3*"/>

                    <!--<RowDefinition Height="0.3*"/>-->

                </Grid.RowDefinitions>

                <Grid  Grid.Row="0">
                    <!-- Outer Circle for Border -->
                    <Ellipse Width="160" Height="160" Fill="#431c52" />

                    <!-- Inner Circle for Image -->
                    <Ellipse x:Name="innerEllipse" Width="150" Height="150" MouseDown="innerEllipse_MouseDown" >
                        <Ellipse.Fill>

                            <!-- This will be set from code-behind -->
                            <ImageBrush x:Name="imageBrush" ImageSource="\Images\userameInstead.jpeg" Stretch="Uniform" />

                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                      Grid.Row="1 "
                      Margin="20">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="USER NAME :"
                             FontSize="15"
                             FontWeight="Black"
                             Width="200"
                             Height="30"
                              
                             VerticalAlignment="Center"                                   
                             Padding="5"
                             >
                        </TextBlock>

                        <TextBox x:Name="teacher_name_txtBox" BorderThickness="0,0,0,4" BorderBrush="#431c52" >
                            <TextBox.Style>

                                <Style TargetType="TextBox">
                                    <Setter Property="Width" Value="200"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Margin" Value="10,0,10,20"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    

                                </Style>
                            </TextBox.Style>


                        </TextBox>

                    </StackPanel>




                    <!--<StackPanel Orientation="Vertical">

                        <TextBlock Text="Role :(click to change)"
                             FontSize="15"
                             FontWeight="Black"
                             Width="200"
                             Height="30"
                             VerticalAlignment="Center"                                   
                             Padding="5"
                             >
                        </TextBlock>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="teacher_role" Content="admin"  
                                  Width="200" Height="30" BorderBrush="#4c00b0"
                                  Background="Transparent" BorderThickness="0,0,0,4"
                                  VerticalContentAlignment="Center"
                                  HorizontalContentAlignment="Center"
                                  FontWeight="Bold"
                                  FontSize="20" Foreground="White"
                                  Click="teacher_role_Click">

                            </Button>
                        </StackPanel>


                       
                    </StackPanel>-->

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                      Grid.Row="2 "
                      Margin="20">
                    <!--<StackPanel Orientation="Vertical">

                        <TextBlock Text="E-MAIL :"
                             FontSize="15"
                             FontWeight="Black"
                             Width="200"
                             Height="30"
                             VerticalAlignment="Center"                                   
                             Padding="5"
                             >
                        </TextBlock>

                        <TextBox x:Name="teacher_Email_txtBox"  >
                            <TextBox.Style>

                                <Style TargetType="TextBox">
                                    <Setter Property="Width" Value="200"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Margin" Value="10,0,10,20"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>


                                </Style>
                            </TextBox.Style>

                        </TextBox>
                    </StackPanel>-->

                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="PASSWORD :"
                             FontSize="15"
                             FontWeight="Black"
                             Width="200"
                             Height="30"
                             VerticalAlignment="Center"                                   
                             Padding="5"
                             >
                        </TextBlock>

                        <TextBox x:Name="teacher_password_txtBox" BorderThickness="0,0,0,4" BorderBrush="#431c52" >
                            <TextBox.Style>

                                <Style TargetType="TextBox">
                                    <Setter Property="Width" Value="200"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Margin" Value="10,0,10,20"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>


                                </Style>
                            </TextBox.Style>

                        </TextBox>
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                      Grid.Row="3 "
                      Margin="20"
                       HorizontalAlignment="Center"
                      VerticalAlignment="Center">

                    

                    <Button  x:Name="Edit_btn" Content="Edit" Margin="15" 
                          Style="{StaticResource Savebtn}" Click="Edit_btn_Click"  >

                    </Button>


                </StackPanel>


            </Grid>
        </Grid>

    </Border>

</Window>
