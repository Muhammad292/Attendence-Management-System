<Window x:Class="AttendenceManagementSystem.Views.AdminDasnboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendenceManagementSystem.Views"
        mc:Ignorable="d"
        d:DesignHeight="579.726" d:DesignWidth="741.807"
        
        MinWidth="741.807"
        MinHeight="679.726"
        
        
        Background = "Transparent"
       WindowStyle="None"
        WindowStartupLocation = "CenterScreen"
        Title="AdminDasnboard" Height="450" Width="800"
         Icon="\Images\images.ico" >


    <Border  Background="White" >


        

        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height = "60"/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            
            <!--header-->
            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions >
                    <ColumnDefinition />
                    <ColumnDefinition Width = "35" />
                    <ColumnDefinition Width = "35" />
                    <ColumnDefinition Width = "35" />
                    <!--<ColumnDefinition Width = "27" />-->
                </Grid.ColumnDefinitions>
                <TextBlock Text = "AdminDashboard" 
                            Foreground = "Black"
                            FontWeight="Bold"
                            FontSize = "20"
                            FontFamily = "Montserrat"
                            Grid.Column = "0"
                            VerticalAlignment = "Center"
                            Margin = "35,0,0,0"
                            Padding="3,6,7,6"/>

                <Button x:Name = "btnMinimize"
                        Content = "-"
                        Style="{StaticResource Minimizebtn}"
                        Grid.Column = "1"
                        Click = "btnMinimize_Click"
                        Margin = "7,3,0,0"
                        HorizontalAlignment="Left"
                        Height="27" 
                        VerticalAlignment="Top" />

                <Button x:Name = "btnMaximize" 
                        Content = "⬜"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource Minimizebtn}"
                        Grid.Column = "2"
                        Margin = "0,3,2,0"
                        Click ="btnMaximize_Click" 
                        HorizontalAlignment="Right"
                        Height="27"
                        VerticalAlignment="Top"   />

                <Button x:Name = "btnClose"
                        Content = "X"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource Closebtn}"
                        Grid.Column = "3"
                        Click ="btnClose_Click" 
                        HorizontalAlignment="Left" 
                        Height="27" 
                        VerticalAlignment="Top"
                        Margin="3,3,0,0"  />

            </Grid>
            
            <!--body-->
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>
                
                
                <!--boder for stack panel fo button-->
                <Border  CornerRadius="0,240,0,0"
                         BorderThickness="0"
                         Opacity="0.93">

                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color = "#462AD8" Offset = "0" />
                            <GradientStop Color = "#DA34AE" Offset = "0.75" />
                            <GradientStop Color = "#8A16C1" Offset = "1" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>

                    <Border.Background>
                        <LinearGradientBrush StartPoint = "0,1" EndPoint = "1,0" >
                            <GradientStop Color = "#060531" Offset = "0" />
                            <GradientStop Color = "#1B1448" Offset = "1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel  Background="Transparent"  Grid.Column="0" Margin="5">
                       
                        <Grid >
                            <!-- Outer Circle for Border -->
                            <Ellipse Width="130" Height="130" Fill="LightGray" />

                            <!-- Inner Circle for Image -->
                            <Ellipse x:Name="CircularImage"  Width="120" Height="120">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="\Images\userameInstead.jpeg" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>


                        <TextBlock Text="Welcome To AMS" 
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center" 
                                   Foreground="AliceBlue" 
                                   FontSize="21"
                                   FontFamily="Montserrat"
                                   FontWeight="DemiBold"
                                   Margin="0,30,0,39"/>



                        <ScrollViewer VerticalScrollBarVisibility="Auto" >
                        <StackPanel Orientation="Vertical">

                            <Button x:Name="AddStudentbtn1" Content="  Attendence  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="AddTeacherbtn1" Content="  Course  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="Enrollment_btn1" Content="  Enrollment  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="Logout_btn1" Content="  Logout  "  FontSize="17"  Style="{StaticResource Dashboardbtn}"  Margin="8"  />
                            <Button x:Name="AddStudentbtn" Content="  Attendence  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="AddTeacherbtn" Content="  Course  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="Enrollment_btn" Content="  Enrollment  "  FontSize="17" Style="{StaticResource Dashboardbtn}"  Margin="8" />
                            <Button x:Name="Logout_btn" Content="  Logout  "  FontSize="17"  Style="{StaticResource Dashboardbtn}"  Margin="8"  />

                        </StackPanel>
                        </ScrollViewer>
                        <StackPanel Height="100"/>
                    </StackPanel>
                </Border>
                
                <!--fram where pages are attached-->                
                <Frame x:Name="AdminFrame" Grid.Column="1" Margin="10" Background="Transparent" NavigationUIVisibility="Hidden"></Frame>

            </Grid>
        </Grid>

    </Border>

</Window>
