<Page x:Class="AttendenceManagementSystem.Views.teacherpages.TeacherCourse"

      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AttendenceManagementSystem.Views.teacherpages"
      xmlns:validation="clr-namespace:AttendenceManagementSystem.Utilities"

      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="TeacherCourse"
      MouseDown="TeacherCourserPage_MouseDown"
      Background="Transparent">


    <TabControl Background="Transparent"   Margin="10,8,10,8">
        <TabItem  Header="Details"  >
            
            <Grid  HorizontalAlignment="Center">
                <Grid.RowDefinitions >
                    <RowDefinition Height = "0.3*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>

                    <ColumnDefinition Width="0.4*"/>

                </Grid.ColumnDefinitions>
                    <!-- Search and Filter Section -->
                <Border  BorderBrush="#dd2afb" Width="300" Height="38" BorderThickness="2,3,2,4" CornerRadius="6"  Grid.Column="0" Grid.Row="0" >
                    <TextBox Width="300"  Margin="0,0,0,0"
                                 x:Name = "search_textbox" 
                                 FontSize = "15"
                                 FontWeight = "Normal"
                                 FontFamily = "Montserrat"                            
                                 Foreground = "#160419"
                                 CaretBrush = "Black"
                                 VerticalAlignment="Center"
             
                                 BorderThickness = "0,0,0,0"
                                 Height = "38"                            
                                 Padding = "2,10,53,10"
                                  TextWrapping="Wrap"
                                 MaxLength="50"
                                 TextChanged="search_textbox_TextChanged"  >
                        <TextBox.Background >
                            <ImageBrush ImageSource = "\Images\searchp.png" 
                                 Stretch = "Uniform"
                                 AlignmentX = "Right"  />
                        </TextBox.Background >
                    </TextBox>

                </Border>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Grid.Row="0" Grid.Column="1" >
                    <Button x:Name="AddCourseButton" Content="Add" Style="{StaticResource Savebtn}" HorizontalAlignment="Stretch" Click="AddCourseButton_Click" />
                </StackPanel>

              
                

                <DataGrid x:Name="CourseDataGrid"  Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="0"
                         AutoGenerateColumns="False"
                         RowHeaderWidth="0"
                         VerticalGridLinesBrush="Transparent" 
                         HorizontalGridLinesBrush="Transparent"
                         Background="Transparent" 
                         BorderBrush="Transparent" 
                         BorderThickness="2"
                         CanUserResizeColumns="False"
                         CanUserResizeRows="False"
                          RowHeight="50"
                          ColumnHeaderHeight="30"
                         CanUserDeleteRows="False"
                         CanUserAddRows="False"
                         CanUserReorderColumns="False"
                         IsReadOnly="false"
                         VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"
                         RowStyle="{StaticResource DataGridRowStyle}"
                         ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"  Margin="10" Width="550"
                         VerticalScrollBarVisibility="Auto"    >


                    <!-- Column Definitions -->
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Course Name"  Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   MaxWidth="160" MinWidth="160" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                     

                        <!--limit-->
                        <DataGridTemplateColumn Header="Limit" MinWidth="80" MaxWidth="80 ">
                            <DataGridTemplateColumn.CellTemplate >
                                <DataTemplate >
                                    <TextBlock Text="{Binding TotalStudentLimit}" TextAlignment="Center" VerticalAlignment="Center"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox  x:Name="LimitTextBox"
                                        HorizontalContentAlignment="Center" 
                                             VerticalContentAlignment="Center"
                                             TextAlignment="Center">
                                        <TextBox.Text>
                                            <Binding Path="TotalStudentLimit" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules>
                                                    <validation:NumericalValidation />
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                        <TextBox.Style>
                                         
                                            <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="Foreground" Value="Red" />
                                                        <Setter Property="Focusable" Value="True"/>
                                                        <Setter Property="ToolTip" Value="Invalid input. Only numbers are allowed." />
                                                </Trigger>
                                            </Style.Triggers>
                                            </Style>
                                            
                                        </TextBox.Style>
                                    </TextBox>

                                   

                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>


                        <!--price column-->
                        <DataGridTemplateColumn Header="Price" MinWidth="80" MaxWidth="80 ">
                            <DataGridTemplateColumn.CellTemplate >
                                <DataTemplate >
                                    <TextBlock Text="{Binding Price}" TextAlignment="Center" VerticalAlignment="Center"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox  x:Name="PriceTextBox"
                                         HorizontalContentAlignment="Center" 
                                              VerticalContentAlignment="Center"
                                              TextAlignment="Center">
                                        <TextBox.Text>
                                            <Binding Path="Price" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules>
                                                    <validation:NumericalValidation />
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                        <TextBox.Style>

                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Validation.HasError" Value="True">
                                                        <Setter Property="Foreground" Value="Red" />
                                                        <Setter Property="Focusable" Value="True"/>
                                                        <Setter Property="ToolTip" Value="Invalid input. Only numbers are allowed." />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>

                                        </TextBox.Style>
                                    </TextBox>



                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Update Button Column -->
                        <DataGridTemplateColumn Header="Update"  MinWidth="100" MaxWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Update" x:Name="UpdateButton" 
                                         Style="{StaticResource DataGridUpdatebtn}"
                                        Click="UpdateButton_Click" >

                                  

                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Delete Button Column -->
                        <DataGridTemplateColumn Header="Delete"  MinWidth="100" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" 
                                        Style="{StaticResource DataGridDeletebtn}"
                                        Click="DeleteButton_Click" >
                                        
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
            
        </TabItem>

       
    </TabControl>
</Page>
