<Page x:Class="AttendenceManagementSystem.Views.studentpages.StudentChallan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AttendenceManagementSystem.Views.studentpages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="670"
      Title="StudentChallan"
      Background="Transparent" >


    <TabControl  Background="Transparent" Margin="10,8,10,8" >
        <TabItem Header="Details">

            <Grid >

                <!--define rows-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                   
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    
                </Grid.ColumnDefinitions>

              

                <!--search filters-->

                <Border  BorderBrush="#dd2afb" Width="300" Height="38" BorderThickness="2,3,2,4" CornerRadius="6"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                    <TextBox Width="300"  Margin="0,0,0,0"
                           x:Name = "search_textbox" 
                           FontSize = "15"
                           FontWeight = "Normal"
                           FontFamily = "Montserrat"                            
                           Foreground = "#160419"
                           CaretBrush = "Black"
                           VerticalAlignment="Center"
           
                           BorderThickness = "0,0,0,0"
                           Height = "38"                            
                           Padding = "2,10,53,10"
                            TextWrapping="Wrap"
                           MaxLength="50"
                           TextChanged="search_textbox_TextChanged"   >
                        <TextBox.Background >
                            <ImageBrush ImageSource = "\Images\searchp.png" 
                   Stretch = "Uniform"
                   AlignmentX = "Right"  />
                        </TextBox.Background >
                    </TextBox>

                </Border>

                <StackPanel   Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"
                     Orientation="Horizontal" >
                    <TextBlock 
                                 Text = "PAID DUES :"
                                 Foreground = "#255736"
                                 FontSize = "18"
                                 FontWeight="Bold"
                                 FontFamily = "Montserrat" HorizontalAlignment="Center"
                                 VerticalAlignment = "Center"
                                 Margin = "35,0,0,0"
                                 Padding="3,6,7,6">

                    </TextBlock>
                    
                    <!--bind-->
                    <TextBlock x:Name="p"
                              Text = "60 "
                              Foreground = "#008000"
                              FontSize = "18"
                              FontWeight="Bold"
                              FontFamily = "Montserrat" HorizontalAlignment="Center"
                              VerticalAlignment = "Center"
                              Margin = "3,0,0,0"
                              Padding="3,6,7,6">

                    </TextBlock>

                </StackPanel>


                <StackPanel   Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Center"
                  Orientation="Horizontal" >
                    <TextBlock 
                              Text = "UNPAID DUES :"
                              Foreground = "#8B0000"
                              FontSize = "18"
                              FontWeight="Bold"
                              FontFamily = "Montserrat" HorizontalAlignment="Center"
                              VerticalAlignment = "Center"
                              Margin = "35,0,0,0"
                              Padding="3,6,7,6">

                    </TextBlock>

                    <!--bind-->
                    <TextBlock x:Name="u"
                           Text = "60 "
                           Foreground = "#D22B2B"
                           FontSize = "18"
                           FontWeight="Bold"
                           FontFamily = "Montserrat" HorizontalAlignment="Center"
                           VerticalAlignment = "Center"
                           Margin = "3,0,0,0"
                           Padding="3,6,7,6">

                    </TextBlock>

                </StackPanel>

                <!--datagrid-->
                <Border Grid.Row="2" Grid.Column="0" 
                     BorderThickness="0" BorderBrush="Transparent"  Grid.ColumnSpan="2">

                    <DataGrid x:Name="StudentChallan_dataGrid"  
                         AutoGenerateColumns="False"
                         RowHeaderWidth="0"
                         VerticalGridLinesBrush="Transparent" 
                         HorizontalGridLinesBrush="Transparent"
                         Background="Transparent" 
                         BorderBrush="Transparent" 
                         BorderThickness="2"
                         CanUserResizeColumns="False"
                         CanUserResizeRows="False"
                          RowHeight="50"
                          ColumnHeaderHeight="30"
                         CanUserDeleteRows="False"
                         CanUserAddRows="False"
                         CanUserReorderColumns="False"
                         IsReadOnly="false"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Center"
                         RowStyle="{StaticResource DataGridRowStyle}"
                         ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" 
                         Margin="5" Width="auto" 
                         VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                           ItemsSource="{Binding ChallanData}">

                        <!--colum definitions-->
                        <DataGrid.Columns>

                            <!--first-->
                            <DataGridTextColumn Header="Challan ID" IsReadOnly="True" Binding="{Binding ChallanId}"   MaxWidth="80" MinWidth="80" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!--first (2)-->
                            <DataGridTextColumn Header="Course ID" IsReadOnly="True" Binding="{Binding CourseId}"   MaxWidth="70" MinWidth="70" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>  

                            <!--second-->
                            <DataGridTextColumn Header="Course Name " IsReadOnly="True"   Binding="{Binding CourseName}"   MaxWidth="120" MinWidth="120" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!--third-->
                            <DataGridTextColumn Header="Teacher Name" IsReadOnly="True"  Binding="{Binding TeacherName}"   MaxWidth="120" MinWidth="120" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!--Fourth-->
                            <DataGridTextColumn Header="Price" IsReadOnly="True" Binding="{Binding Price}"   MaxWidth="60" MinWidth="60" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!--Fifth-->
                            <DataGridTextColumn Header="Status" IsReadOnly="True"   Binding="{Binding ChallanStatus}"   MaxWidth="70" MinWidth="70" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!--sixth-->
                            <DataGridTextColumn Header="Issue Date" IsReadOnly="True"   Binding="{Binding EnrollmentDate}"   MaxWidth="90" MinWidth="90" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>



                        </DataGrid.Columns>

                    </DataGrid>

                </Border>
               
            </Grid>

        </TabItem>
    </TabControl>

</Page>
