<Window x:Class="AttendenceManagementSystem.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendenceManagementSystem.Views"
        mc:Ignorable="d"
        Title = "LoginView" Height = "650" Width = "700"  
        WindowStyle = "None"
        ResizeMode = "NoResize"
        WindowStartupLocation = "CenterScreen"
        Background = "Transparent"
        AllowsTransparency = "True"
        MouseDown = "Window_MouseDown"
         Icon="\Images\images.ico" >
<!-- first border is for picture nad 2nd one is for window-->
    <Border CornerRadius="67" >
        <Border.Background>
            <ImageBrush ImageSource="\Images\BackgroundLogin.jpeg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="60"          
            
            BorderThickness="5"
                Opacity="0.87">
        
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color = "#462AD8" Offset = "0" />
                    <GradientStop Color = "#DA34AE" Offset = "0.75" />
                    <GradientStop Color = "#8A16C1" Offset = "1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint = "0,1" EndPoint = "1,0" >
                    <GradientStop Color = "#060531" Offset = "0" />
                    <GradientStop Color = "#1B1448" Offset = "1" />
                </LinearGradientBrush>
             </Border.Background>
            <!-- now wee make window bar-->
  
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height = "30"/>
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition />
                        <ColumnDefinition Width = "35" />
                        <ColumnDefinition Width = "35" />
                        <ColumnDefinition Width = "35" />
                        <ColumnDefinition Width = "27" />
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock Text = "LOG IN" 
                               Foreground = "DarkGray"
                               FontSize = "20"
                               FontFamily = "Montserrat"
                               Grid.Column = "0"
                               VerticalAlignment = "Center"
                               Margin = "35,0,0,0"
                               Padding="23,6,7,6"/>-->

                    <Button x:Name = "btnMinimize"                         
                           Content = "-"
                           Style="{StaticResource Minimizebtn}"
                           Grid.Column = "1"
                           Click = "btnMinimize_Click" 
                            Margin = "7,3,0,0"/>

                    <Button x:Name = "btnMaximize" 
                            Content = "⬜"
                            VerticalContentAlignment="Center"
                           Style="{StaticResource Minimizebtn}"
                           Grid.Column = "2"
                            Margin = "0,3,2,0"
                           Click = "btnMaximize_Click" HorizontalAlignment="Right"   />

                    <Button x:Name = "btnClose" 
                            Content = "X"
                            VerticalContentAlignment="Center"
                           Style="{StaticResource Closebtn}"
                           Grid.Column = "3"
                            Margin = "0,3,4,0"
                           Click = "btnClose_Click" HorizontalAlignment="Right"  />

                </Grid>
                <!--now we need to make the main content-->

                <StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            Width="380"
                            Margin="0,35,0,35">
                    <Image Source="\Images\attendenceLogo.jpeg"
                           Width="100" 
                           Height="100"
                           Margin="0,16,0,10"/>
                    <TextBlock Text="ATTENDENCE MANAGEMENT SYSTEM"
                               HorizontalAlignment="Center"
                               Foreground="AliceBlue" 
                               FontSize="21"
                               FontFamily="Montserrat"
                               FontWeight="DemiBold"
                               Margin="0,7,0,39"/>
                    <!--usERNAME-->
                    <TextBlock Text = "Email" 
                               Foreground = "DarkGray"
                               FontSize = "18"
                               FontWeight = "Medium"
                               FontFamily = "Montserrat"                             
                               Margin = "0,0,0,5" />

                    <TextBox x:Name = "txtbox_user" 
                             FontSize = "16"
                             FontWeight = "Medium"
                             FontFamily = "Montserrat"                            
                             Foreground = "White"
                             CaretBrush = "LightGray"
                             BorderBrush = "DarkGray"
                             BorderThickness = "0,0,0,2"
                             Height = "38"
                             VerticalContentAlignment = "Center"
                             Margin = "0,5,0,0"
                             Padding = "53,0,0,0"
                              TextWrapping="Wrap"
                             MaxLength="40" >
                        <TextBox.Background >
                            <ImageBrush ImageSource = "\Images\emailp.jpeg" 
                                        Stretch = "Uniform"
                                        AlignmentX = "Left"  />
                        </TextBox.Background >
                    </TextBox>


                   
                     <!--password-->
                           <TextBlock Text = "Password" 
                           Foreground = "DarkGray"
                           FontSize = "18"
                           FontWeight = "Medium"
                           FontFamily = "Montserrat"                             
                           Margin = "0,17,0,3" />

                    <PasswordBox x:Name = "txtbox_pass" 
                         FontSize = "16"
                         FontWeight = "Medium"
                         FontFamily = "Montserrat"                            
                         Foreground = "White"
                         CaretBrush = "LightGray"
                         BorderBrush = "DarkGray"
                         BorderThickness = "0,0,0,2"
                         Height = "38"
                         VerticalContentAlignment = "Center"
                         Margin = "0,5,0,0"
                         Padding = "53,0,0,0" 
                            MaxLength="17">
                        <PasswordBox.Background >
                            <ImageBrush ImageSource = "\Images\keyp.png" 
                                        Stretch = "Uniform"
                                        AlignmentX = "Left"  />
                            </PasswordBox.Background >
                    </PasswordBox>

                    <!--login  button-->

                    <Button x:Name = "btnLogin"                         
                           Content = "Login"
                           Style="{StaticResource Loginbtn }"                           
                           Click = "btnLogin_Click" 
                            />
                    <StackPanel Orientation = "Horizontal" 
                                HorizontalAlignment = "Center"
                                Margin = "0,14,0,0" >
                        <TextBlock Text = "Forgot Password?" 
                               Foreground = "DarkGray"
                               FontSize = "13"
                               FontWeight = "Medium"
                               FontFamily = "Montserrat" />
                        <TextBlock x:Name="Reset" Text = "Reset" 
                               Foreground = "White"
                               FontSize = "15"
                               FontWeight = "Medium"
                               FontFamily = "Montserrat"
                               Cursor = "Hand"
                               Margin = "8,0,0,0" MouseDown="Reset_MouseDown"/>
                    </StackPanel>
                    <StackPanel Visibility="Collapsed" Orientation = "Horizontal" 
                                HorizontalAlignment = "Center"
                                Margin = "0,4,0,0" >
                                            <TextBlock Text = "Don't have an Account?" 
                               Foreground = "DarkGray"
                               FontSize = "14"
                               FontWeight = "Medium"
                               FontFamily = "Montserrat" />
                                            <TextBlock Text = "Register" 
                               Foreground = "White"
                               FontSize = "16"
                               FontWeight = "Medium"
                               FontFamily = "Montserrat"
                               Cursor = "Hand"
                               Margin = "8,0,0,0" />
                    </StackPanel>

                </StackPanel>

            </Grid>

        </Border> 
    </Border>
    
    
        
  
</Window>
